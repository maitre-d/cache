{
  "compilerOptions": {
    "baseUrl": ".",
    "target": "es6",
    "lib": ["es2020"],
    "module": "commonjs",
    "rootDir": "./src",
    "outDir": "./dist",
    "types": ["jest-extended", "jest"],
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "importsNotUsedAsValues": "error",
    "strict": true,
    "sourceMap": true,
    "declaration": true
  },
  "include": [
    "src/**/*",
    "test/**/*"
  ],
  "exclude": [
    "dist/**/*"
  ]
}
